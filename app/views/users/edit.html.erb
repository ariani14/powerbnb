<div class="container2">
	<div class="col-5" style="
    background-color: rgba(255, 255, 255, 0.5); height: 250px;
   margin: auto; margin-top: 350px;">
	 <%= form_for @user, :url => user_path(@user.id), :method => :PUT do |f| %>
	 <br>
	 <h5>Editing your profile</h5>
	 <br>
	
		<div class="form-group">
					<%= f.text_field :first_name, placeholder: "Enter first name"%><br>
		</div>
		<div class="form-group">
					<%= f.text_field :last_name, placeholder: "Enter last name"%><br>
		</div>
		<div class="form-group">
					<%= f.file_field :profile_photo %> 
		</div>
		<%= f.submit  "Save"%>
	<% end %>
	</div>
</div>

