<div class="container">
	<div class="row" id="form-row">
		<div class="col-8" style="margin-top: 150px; background-color: white; padding: 32px;">
			<%= form_for @user, :url => user_path(@user.id), :method => :PUT do |f| %>
				<div class="form-group">
					<%= f.text_field :first_name, placeholder: "Enter first name"%>
				</div>
				<div class="form-group">
					<%= f.text_field :last_name, placeholder: "Enter last name"%>
				</div>
				<div class="form-group">
					<%= f.file_field :profile_photo %> 
				</div>
				<%= f.submit  "Save"%>
			<% end %>
		</div>
	</div>
</div>
